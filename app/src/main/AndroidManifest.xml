<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atikur.amaderdoctor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/amader_doctor_new"
        android:label="@string/app_name"
        android:roundIcon="@drawable/amader_doctor_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/AppThemeNew">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddDoctor"
            android:label="তথ্য সংযোজন করুন">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Doctor_Details"
            android:label="সম্পূর্ন বিবরণ"/>
        <activity android:name=".DoctorSearchAll"
            android:label="জেলার সকল ডাক্তার"/>
        <activity android:name=".DoctorsSearchResult"
            android:label="বিশেষজ্ঞ ডাক্তার"/>
        <activity android:name=".AboutUs"
            android:label="আমাদের সম্পর্কে"/>
        <activity android:name=".Complain"
            android:label="অভিযোগ / উপদেশ" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".PhoneVerification"
            android:label="তথ্য সংযোজন করুন"/>
        <activity android:name=".SearchDistrictAll"
            android:label="জেলার সকল ডাক্তার"/>
        <activity android:name=".SearchSpecialist"
            android:label="খুজুন বিশেষজ্ঞ ডাক্তার"/>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppThemeNew">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>