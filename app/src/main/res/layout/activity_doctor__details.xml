<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/docName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Mr. Rifat"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" ডিগ্রী " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>



    <TextView
        android:id="@+id/docDegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" পদবি " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/docDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/docSpeciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" মোবাইল " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>



    <TextView
        android:id="@+id/docMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" ইমেইল " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/docEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" চেম্বার " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/docChamber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:text=" কর্মস্থল " />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:background="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/docDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="District" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text=", " />

        <TextView
            android:id="@+id/docDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Division" />



    </LinearLayout>

</LinearLayout>
